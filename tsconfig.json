{
	"compilerOptions": {
		"strict": true,
		"noEmit": true,
		"jsx": "preserve",
		"lib": [ "dom", "esnext" ],
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*",
		"src/**/*.json"
	],
	"exclude": [
		"**/build/**",
	]
}
